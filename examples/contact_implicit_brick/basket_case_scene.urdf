<?xml version="1.0"?>

<robot xmlns="http://drake.mit.edu"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://drake.mit.edu ../../doc/drakeURDF.xsd"
 name="BasketCaseScene">

  <!--
  Scene: Lower wall, upper wall, and back stop

  Brick at origin (0, 0, 0)

  +X is forward
  +Z is up

  Lower Wall Height: 10m
  Upper Wall from Lower Wall Top: 5m
    Extra Height: 10m
  Back Height: 25m
  
  Wall Width (aesthetics): 1m
  -->

  <link name="lower_wall">
    <pose xyz="10.5 0 5" rpy="0 0 0"/>
    <geometry>
      <visual>
        <box size="1 3 10"/>
      </visual>
    </geometry>
  </link>

  <link name="upper_wall">
    <pose xyz="10.5 0 20" rpy="0 0 0"/>
    <geometry>
      <visual>
        <box size="1 3 10"/>
      </visual>
    </geometry>
  </link>

  <link name="back_stop">
    <pose xyz="16.5 0 12.5" rpy="0 0 0"/>
    <geometry>
      <visual>
        <box size="1 3 25"/>
      </visual>
    </geometry>
  </link>

</robot>

<?xml version="1.0"?>

<robot xmlns="http://drake.mit.edu"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://drake.mit.edu ../../doc/drakeURDF.xsd"
 name="BasketCaseScene">

  <!--
  Scene: Lower wall, upper wall, and back stop

  Brick at origin (0, 0, 0)

  +X is forward
  +Z is up

  Lower Wall Height: 10m
  Upper Wall from Lower Wall Top: 5m
    Extra Height: 10m
  Back Height: 25m
  
  Wall Width (aesthetics): 1m
  -->

  <link name="lower_wall">
    <visual>
      <origin xyz="10.5 0 2.5" rpy="0 0 0"/>
      <geometry>
        <box size="1 3 5"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="10.5 0 2.5" rpy="0 0 0"/>
      <geometry>
        <box size="1 3 5"/>
      </geometry>
    </collision>
  </link>

  <link name="upper_wall">
    <visual>
      <origin xyz="10.5 0 20" rpy="0 0 0"/>
      <geometry>
        <box size="1 3 10"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="10.5 0 20" rpy="0 0 0"/>
      <geometry>
        <box size="1 3 10"/>
      </geometry>
    </collision>
  </link>

  <link name="back_stop">
    <visual>
      <origin xyz="21.5 0 12.5" rpy="0 0 0"/>
      <geometry>
        <box size="1 3 25"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="21.5 0 12.5" rpy="0 0 0"/>
      <geometry>
        <box size="1 3 25"/>
      </geometry>
    </collision>
  </link>

</robot>

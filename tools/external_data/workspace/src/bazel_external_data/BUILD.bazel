# -*- python -*-

load("//tools:lint.bzl", "add_lint_tests")

# Use relative package path, as `py_library` does not like absolute package
# paths. This ensures that `//src` is added to `PYTHONPATH`.
imports = [".."]

# @note 'core' has no backends present.
py_library(
    name = "core",
    srcs = [
        "config_helpers.py",
        "core.py",
        "hashes.py",
        "util.py",
    ],
    imports = imports,
    visibility = ["//visibility:public"],
)

py_library(
    name = "cli_base",
    srcs = [
        "check.py",
        "download.py",
        "upload.py",
    ],
    imports = imports,
    visibility = ["//visibility:public"],
    deps = [
        ":core",
        "//src/bazel_external_data/backends",
    ],
)

# Declare 'cli' in //:, to permit easier access to the binary from external
# repos.
exports_files(
    srcs = ["cli.py"],
)

alias(
    name = "cli",
    actual = "//:cli",
)

add_lint_tests()

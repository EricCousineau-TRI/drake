load("//tools:lint.bzl", "add_lint_tests")
load(":workspace_test.bzl", "workspace_test")

root_data = "//:root_data"

workspace_test(
    name = "bazel_pkg_test",
    data = [root_data],
    workspace = ":workspaces/bazel_pkg_test",

# -*- python -*-

load("@drake//tools/install:install.bzl", "install")
load("//tools/lint:lint.bzl", "add_lint_tests")

package(default_visibility = ["//visibility:public"])

licenses(["permissive"])

py_library(
    name = "wrapt",
    srcs = [
        "__init__.py",
        "wrappers.py",
    ],
    deps = ["//:module_py"],
    tags = ["nolint"],
)

install(
    name = "install",
    targets = [":wrapt"],
    py_dest = "lib/python2.7/site-packages/drake/third_party/wrapt",
    docs = [":LICENSE"],
    doc_dest = "share/doc/wrapt",
    deps = ["//third_party:install_module_py"],
)

add_lint_tests()
